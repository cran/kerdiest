  year         = "2012",
  volume       = "50",
  number       = "8",
  pages        = "1--21",
  doi          = "10.18637/jss.v050.i08",
  textVersion  = paste("Alejandro Quintela-del-Río, Graciela Estévez-Pérez (2012).",
                       "Nonparametric kernel distribution function estimation with kerdiest: an R Package for bandwidth choice and applications.",
                       "Journal of Statistical Software, 50(8), 1-21.",
                       "URL https://www.jstatsoft.org/v50/i08/.")
